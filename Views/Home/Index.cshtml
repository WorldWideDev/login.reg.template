@{
    ViewData["Title"] = "Home Page";
}
@model LoginReg.Models.User

<form asp-controller="Home" asp-action="Register" method="post">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName"></input>
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input asp-for="LastName"></input>
    </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input asp-for="Email"></input>
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input asp-for="Password"></input>
    </div>
     <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword"></input>
    </div>
    <button type="submit">Register</button>
</form>

<form asp-controller="Home" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email"></input>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password"></input>
    </div>
    <button type="submit">Login</button>
</form>